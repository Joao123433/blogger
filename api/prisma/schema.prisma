generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Posts {
  id           String    @id
  title        String
  introduction String
  story        String
  conclusion   String
  created_at   DateTime? @default(now())
  updated_at   DateTime? @default(now())

  userId String?
  user   Users?  @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Users {
  id           String    @id
  name         String
  passwordHash String
  email        String    @unique
  created_at   DateTime  @default(now())
  updated_at   DateTime? @default(now())
  Posts        Posts[]
}
